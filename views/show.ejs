<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="cards flex flex-wrap gap-10">
    <% user.posts.forEach((post) => { %>
        <div class="w-32">
            <div class="card w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
              <img src="/images/uploads/<%=post.image%>" class="w-full h-full object-cover" />
            </div>
            <a class="mt-2 text-sm underline" href="/show/posts/<%=post._id%>"><%=post.title%></a>
            <h5 class="mt-2 text-xs"><%=post.description%></h5>
          </div>
    <% })%>
  </div>
</div>
<% include ./partials/footer.ejs %>
