<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5">
  <h1 class="text-3xl text-white">Create a new post</h1>
  <hr class="opacity-10 mt-3" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input type="file" class="block w-1/3 px-3 py-2 text-white" name="postimage"/>
    <input
      type="text"
      placeholder="Title"
      class="block w-1/3 px-3 py-2 rounded-md border-2 mt-2"
      name="title"
    />
    <textarea
      class="block w-1/3 px-3 py-2 rounded-md border-2 mt-2 h-60"
      placeholder="Description"
      name="description"
    >
    </textarea>
    <input
      type="submit"
      value="Create Post"
      class="block w-1/3 px-3 py-2 bg-red-700 rounded-md mt-2 text-white"
    />
  </form>
</div>
